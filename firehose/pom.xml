<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!-- our parent -->
  <parent>
    <artifactId>master</artifactId>
    <groupId>org.mskcc.cbio</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <!-- module metadata -->
  <modelVersion>4.0.0</modelVersion>
  <artifactId>firehose-admin</artifactId>
  <name>Firehose Admin</name>
  <description>Admin Module for Firehose Tool</description>
  <url>http://www.pathwaycommons.org</url>

  <!-- repositories -->
  <repositories>
	<repository>
	  <id>gdata-maven-github</id>
	  <name>Google Gdata Maven Repository</name>
	  <url>https://raw.github.com/eburtsev/gdata-maven/master/</url>
	</repository>
  </repositories>

  <!-- properties -->
  <properties>
	<spring.version>3.0.6.RELEASE</spring.version>
  </properties>

  <dependencies>

	<!-- apache commons CLI -->
	<dependency>
	  <groupId>commons-cli</groupId>
	  <artifactId>commons-cli</artifactId>
	  <version>1.1</version>
	</dependency>

	<!-- apache commons logging -->
	<dependency>
	  <groupId>log4j</groupId>
	  <artifactId>apache-log4j-extras</artifactId>
	  <version>1.1</version>
	</dependency>

	<!-- gdata -->
	<dependency>
	  <groupId>com.google.gdata.gdata-java-client</groupId>
	  <artifactId>gdata-spreadsheet-3.0</artifactId>
	  <version>1.46.0</version>
	</dependency>

	<!-- log4j -->
	<dependency>
	  <groupId>log4j</groupId>
	  <artifactId>log4j</artifactId>
	  <version>1.2.16</version>
	</dependency>

	<!-- spring 3 -->
	<dependency>
	  <groupId>org.springframework</groupId>
	  <artifactId>spring-core</artifactId>
	  <version>${spring.version}</version>
	</dependency>
	<dependency>
	  <groupId>org.springframework</groupId>
	  <artifactId>spring-context</artifactId>
	  <version>${spring.version}</version>
	</dependency>
	
  </dependencies>

  <build>

	<!-- plugins -->
	<plugins>

	  <!-- assembly -->
	  <plugin>
		<artifactId>maven-assembly-plugin</artifactId>
		<version>2.2-beta-5</version>
		<configuration>
		  <descriptorRefs>
			<descriptorRef>jar-with-dependencies</descriptorRef>
		  </descriptorRefs>
		  <archive>
			<manifest>
			  <mainClass>org.mskcc.cbio.firehose.Admin</mainClass>
			</manifest>
		  </archive>
		</configuration>
		<executions>
		  <execution>
			<id>make-assembly</id>
			<phase>package</phase>
			<goals>
			  <goal>single</goal>
			</goals>
		  </execution>
		</executions>
	  </plugin>
	</plugins>

	<!-- prevent some resources from getting into war -->
	<resources>
	  <resource>
		<directory>src/main/resources</directory>
		<excludes>
		  <exclude>firehose.properties</exclude>
		</excludes>
	  </resource>
	</resources>

  </build>
  
</project>
